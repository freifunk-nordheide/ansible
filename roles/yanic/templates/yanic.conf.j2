# {{ ansible_managed }}
[respondd]
enable           = true
synchronize      = "1m"
collect_interval = "1m"

[respondd.sites.{{ gateways[unit_id].site }}]
domains          = ["{{ hoods[item.key].sname }}"]

[[respondd.interfaces]]
ifname = "br-{{ hoods[item.key].sname }}"
port = 10010

[webserver]
enable  = false
bind    = "{{ gateways[unit_id].ipv4 }}:80"
webroot = "/var/www/html/"

[nodes]
state_path    = "/var/lib/yanic/{{ hoods[item.key].sname }}/state.json"
prune_after   = "7d"
save_interval = "5s"
offline_after = "10m"

[[nodes.output.meshviewer-ffrgb]]
enable   = true
path = "/var/www/html/yanic/{{ hoods[item.key].sname }}/meshviewer.json"

[nodes.output.meshviewer-ffrgb.filter]
no_owner = true
#blacklist = []
#sites = ["{{ gateways[unit_id].site }}"]
#has_location = true

#[nodes.output.meshviewer-ffrgb.filter.in_area]
#latitude_min = 34.30
#latitude_max = 71.85
#longitude_min = -24.96
#longitude_max = 39.72

[[nodes.output.meshviewer]]
enable         = true
version        = 2
nodes_path = "/var/www/html/yanic/{{ hoods[item.key].sname }}/nodes.json"
graph_path = "/var/www/html/yanic/{{ hoods[item.key].sname }}/graph.json"

[nodes.output.meshviewer.filter]
no_owner = true

[[nodes.output.nodelist]]
enable   = true
path = "/var/www/html/yanic/{{ hoods[item.key].sname }}/nodelist.json"

[nodes.output.nodelist.filter]
no_owner = true

[database]
delete_after = "5000d"
delete_interval = "1d"

[[database.connection.influxdb]]
enable   = false
#address  = ""
#database = ""
#username = ""
#password = "{"

[database.connection.influxdb.tags]

[[database.connection.graphite]]
enable   = false
#address  = ""
#prefix   = ""

[[database.connection.respondd]]
enable   = false
#type     = "udp6"
#address  = ""

[[database.connection.logging]]
enable   = false
path     = "/var/log/yanic.log"
